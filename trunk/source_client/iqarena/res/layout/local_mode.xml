<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/local_mode_vf_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_sky_night"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/local_mode_ll_question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="true"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:baselineAligned="false"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6" >

                <TextView
                    android:id="@+id/local_mode_tv_question_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="Question #"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/local_mode_tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="Score: 0"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_form1"
                        android:orientation="horizontal"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/local_mode_tv_question_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:maxLines="5"
                            android:scrollbars="vertical"
                            android:text="question"
                            android:textColor="#ffffffff" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="3"
                        android:background="@drawable/bg_form1"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/local_mode_tv_timer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="40px"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/bg_form1"
                    android:padding="5dp" >

                    <Button
                        android:id="@+id/local_mode_btn_help_x2"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_style1"
                        android:text="x2"
                        android:textColor="#ffffffff"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/local_mode_btn_help_release"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/local_mode_btn_help_x2"
                        android:background="@drawable/button_style1"
                        android:text="-25%"
                        android:textColor="#ffffffff"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/local_mode_btn_help_50_50"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/local_mode_btn_help_release"
                        android:background="@drawable/button_style1"
                        android:text="50:50"
                        android:textColor="#ffffffff"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/local_mode_btn_help_change_question"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/local_mode_btn_help_50_50"
                        android:background="@drawable/button_style1"
                        android:text="---"
                        android:textColor="#ffffffff"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_form1"
            android:orientation="vertical"
            android:padding="5dp" >

            <Button
                android:id="@+id/local_mode_btn_summit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style1"
                android:text="Summit"
                android:textColor="#ffffffff"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/local_mode_rg_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/local_mode_rb_answer_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/grid_selector"
                        android:paddingLeft="40dp"
                        android:text="a" />

                    <RadioButton
                        android:id="@+id/local_mode_rb_answer_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/grid_selector"
                        android:paddingLeft="40dp"
                        android:text="b" />

                    <RadioButton
                        android:id="@+id/local_mode_rb_answer_c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/grid_selector"
                        android:paddingLeft="40dp"
                        android:text="c" />

                    <RadioButton
                        android:id="@+id/local_mode_rb_answer_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/grid_selector"
                        android:paddingLeft="40dp"
                        android:text="d" />
                </RadioGroup>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    
    
    
    
    
    
    
    
    
    

    
    
    <LinearLayout
        android:id="@+id/play_game_layout_question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="true"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Rankings"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:background="@drawable/bg_form1"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/local_main_rl_rank_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/tropy_score" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imageView1"
                    android:src="@drawable/user" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/chart" />
            </RelativeLayout>

            <View
                android:id="@+id/horizal"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/local_main_rl_rank_title"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white" />

            <ListView
                android:id="@+id/local_mode_lv_rank"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/horizal"
	            android:background="@android:color/transparent"
	            android:cacheColorHint="@android:color/transparent"
	            android:focusable="false"
	            android:focusableInTouchMode="false"
	            android:smoothScrollbar="true"
	            android:clickable="false"
                android:layout_margin="5dp" >
            </ListView>
        </RelativeLayout>
    </LinearLayout>


</ViewFlipper>